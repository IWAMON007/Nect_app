<h1 class="d-flex justify-content-center pb-5">Timeline of Nectgrams</h1>
<div class="timeline">
    <% @event_history.reverse_each do |event_history| %>
        <div class="timeline-item">
            <div class="timeline-content">
                <h2><%= event_history.event_title %></h2>
                <p><%= event_history.event_text %></p>
                <span class="date"><%= event_history.date_of_event.strftime("%B %Y") %></span>
            </div>
        </div>
    <% end %>
</div>

<style>
/* CSS for the timeline component */

/* Timeline container */
.timeline {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* Vertical line in the middle */
.timeline::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    background-color: #333;
    transform: translateX(-50%);
}

/* Timeline item */
.timeline-item {
    position: relative;
    width: 100%;
    padding: 20px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

/* Connector circle */
.timeline-item::before {
    content: '';
    width: 20px;
    height: 20px;
    background: #fff;
    border: 4px solid #333;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
}

/* Timeline content box */
.timeline-content {
    background: #fff;
    padding: 20px;
    border-radius: 6px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative;
    width: 45%;
    text-align: center;
    z-index: 2;
    word-wrap: break-word;       /* Break long words */
    overflow-wrap: break-word;   /* Break long words (alternate property) */
    word-break: break-word;      /* Break long words forcibly */
    box-sizing: border-box;      /* Include padding and border in width calculations */
}

/* Ensures text does not overflow from timeline content */
.timeline-content h2, .timeline-content p {
    margin: 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
}

/* Alternating content alignment */
.timeline-item:nth-child(odd) .timeline-content {
    margin-right: auto;
    text-align: right;
    padding-right: 15px; /* Adjust padding for better alignment */
}

.timeline-item:nth-child(even) .timeline-content {
    margin-left: auto;
    text-align: left;
    padding-left: 15px; /* Adjust padding for better alignment */
}

/* Date styling */
.date {
    display: block;
    margin-top: 10px;
    font-size: 0.85em;
    color: #666;
}

/* Responsive adjustments */
@media (max-width: 600px) {
    .timeline::before {
        left: 50%; /* Keep the line centered on small screens */
    }
    .timeline-content {
        width: 80%; /* Expand content width for small screens */
        text-align: center;
        padding: 10px; /* Reduce padding for better fit */
    }
    .timeline-item:nth-child(odd) .timeline-content,
    .timeline-item:nth-child(even) .timeline-content {
        margin: auto;
        text-align: center;
    }
}
</style>
