<%= form_with(model: event_history, url: url, local: true) do |form| %>
    <table class="table">
        <tbody>
            <tr>
                <th style="width: 5%;" scope="row"><%= event_history.id || '-' %></th>
                <td style="width: 15%;"><%= form.text_field :event_title, placeholder: "Enter event title", class: "form-control" %></td>
                <td style="width: 40%;"><%= form.text_area :event_text, placeholder: "Enter event description", class: "form-control" %></td>
                <td style="width: 20%;"><%= form.date_select :date_of_event, discard_day: true, start_year: 2020, class: "form-control" %></td>
                <td style="width: 20%;">
                    <div class="btn-group d-flex flex-wrap" style="width: 100%;">
                        <%= form.submit submit_text, class: "btn #{submit_class} btn-sm" %>
                        <% if delete_path %>
                            <%= link_to "Delete Event", delete_path, data: { turbo_method: :delete, turbo_confirm: "<<<REMOVE EVENT>>>\nPROCEED?" }, class: "btn btn-danger btn-sm" %>
                        <% end %>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
<% end %>
